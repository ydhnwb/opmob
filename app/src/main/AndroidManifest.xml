<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ydhnwb.opaku_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ui.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Opakuapp">
        <activity
            android:name=".ui.detail.DetailProductActivity"
            android:label="@string/title_activity_detail_product"
            android:theme="@style/Theme.Opakuapp.NoActionBar"></activity>
        <activity
            android:name=".ui.transaction.TransactionActivity"
            android:label="@string/title_activity_transaction"
            android:theme="@style/Theme.Opakuapp.NoActionBar" />
        <activity
            android:name=".ui.register.RegisterActivity"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar" />
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>